{
  "name": "rifa-app",
  "version": "1.0.0",
  "description": "Aplicaci√≥n de rifas con React, Express y MariaDB",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon server.js",
    "dev:frontend": "cd frontend && npm run dev",
